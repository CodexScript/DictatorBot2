{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "off",
        "@typescript-eslint/comma-dangle": "off",
        "no-restricted-syntax": "off",
        "no-await-in-loop": "off",
        "no-plusplus": "off",
        "import/extensions": [
            "error",
            {
                "js": "ignorePackages",
                "json": "never"
            }
        ]
    }
}